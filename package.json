{
    "name": "blockalign",
    "displayName": "BlockAlign",
    "description": "Align blocks of code like Vertical Alignment for Sublime Text 3",
    "version": "0.5.0",
    "publisher": "SanderPilon",
    "engines": {
        "vscode": "^1.5.0"
    },
    "keywords" : [ "align", "alignment", "valign" ],
    "categories": [
        "Other"
    ],
    "icon": "icon/icon.png",
    "activationEvents": [
        "onCommand:extension.blockalign"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.blockalign",
                "title": "Aligns current block"
            }
        ],
        "keybindings": [
            {
                "command": "extension.blockalign",
                "key": "ctrl+\\",
                "mac": "ctrl+\\",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/crewone/vscode-blockalign"
    }
}